{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["*.ts", "../idl/*.ts"],
  "exclude": ["node_modules"]
}

